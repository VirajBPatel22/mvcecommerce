<script>
    function increaseQuantity(button) {
        let input = button.previousElementSibling;
        input.value = parseInt(input.value) + 1;
        updateTotal();
    }

    function decreaseQuantity(button) {
        let input = button.nextElementSibling;
        if (parseInt(input.value) > 1) {
            input.value = parseInt(input.value) - 1;
            updateTotal();
        }
    }

    function updateTotal() {
        // Dummy logic for total calculation
        let total = 50 * parseInt(document.querySelectorAll('.quantity-input')[0].value) +
            30 * parseInt(document.querySelectorAll('.quantity-input')[1].value);
        document.querySelector('.checkout-bar h4').textContent = 'Total: $' + total;
    }
</script>