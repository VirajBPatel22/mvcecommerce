        .banner-title {
            font-size: 28px;
            font-weight: bold;
            color: #222;
            margin-bottom: 20px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        /* Swiper Container */
        .swiper-container {
            width: 100%;
            max-width: 1200px;
            margin: auto;
            padding-bottom: 50px;
            position: relative;
        }

        /* Product Cards */
        .swiper-slide {
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.1);
            padding: 20px;
            transition: transform 0.3s ease-in-out;
