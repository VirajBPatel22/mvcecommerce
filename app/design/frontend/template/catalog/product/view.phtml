            'yellow' => '#ffc107',
            'black' => '#000000',
            'white' => '#ffffff',
            'gray' => '#6c757d',
            'pink' => '#e83e8c',
            'purple' => '#6f42c1',
            'orange' => '#fd7e14',
            'brown' => '#795548',
            // Add more colors as needed
        ];
        
        $color = strtolower($color);
        return isset($colorMap[$color]) ? $colorMap[$color] : '#cccccc';
    }
